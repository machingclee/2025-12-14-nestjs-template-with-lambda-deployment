{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "public/**/*",
                "root": ".",
                "outDir": "dist"
            }
        ],
        "plugins": [
            {
                "name": "@nestjs/swagger",
                "options": {
                    "classValidatorShim": true,
                    "introspectComments": true,
                    "dtoFileNameSuffix": [".dto.ts", ".entity.ts"],
                    "controllerFileNameSuffix": [".controller.ts"]
                }
            }
        ]
    }
}
